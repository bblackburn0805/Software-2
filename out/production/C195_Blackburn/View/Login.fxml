<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="288.0" prefWidth="467.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controls.Login">
   <children>
      <Label fx:id="helloLabel" layoutX="22.0" layoutY="14.0" text="Hello! Welcome to the Scheduler 3000">
         <font>
            <Font name="Marlett" size="25.0" />
         </font>
      </Label>
      <Label fx:id="queryLabel" layoutX="180.0" layoutY="85.0" text="Please Log-in">
         <font>
            <Font name="Marlett" size="18.0" />
         </font>
      </Label>
      <HBox alignment="CENTER_RIGHT" layoutX="60.0" layoutY="120.0" prefHeight="40.0" prefWidth="300.0">
         <children>
            <Label fx:id="usernameLabel" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="80.0" text="Username">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="usernameBox" prefWidth="200.0">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" layoutX="60.0" layoutY="155.0" prefHeight="40.0" prefWidth="300.0">
         <children>
            <Label fx:id="passwordLabel" alignment="CENTER_RIGHT" prefWidth="80.0" text="Password" />
            <TextField fx:id="passwordBox" prefWidth="200.0">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <Button fx:id="login" layoutX="283.0" layoutY="253.0" mnemonicParsing="false" onAction="#actionLogin" prefHeight="25.0" prefWidth="70.0" text="Log-in" />
      <Button fx:id="cancel" layoutX="366.0" layoutY="253.0" mnemonicParsing="false" onAction="#actionCancel" prefWidth="70.0" text="Cancel" />
   </children>
</AnchorPane>
